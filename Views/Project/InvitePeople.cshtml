@model Jira.Models.ViewModel.InvitePeopleToProjectViewModel


<div>
    <h3>Invite users to your project!</h3>
    <hr/>
    <p>Below is list of all the users who are using this application but are not part of this project.</p>
    
    <form method="post">
        <input asp-for="ProjectId" hidden="hidden"/>
        
        <div>
            <label>Select a user to invite</label>
            <select asp-for="UserId" asp-items="@Model.Users" class="form-select mt-3">
                <option value="">Pick one</option>
            </select>
        </div>
        
        <button class="btn btn-primary mt-3">Invite new users</button>
    </form>
</div>