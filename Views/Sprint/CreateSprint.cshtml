@model Jira.Models.ViewModel.CreateSprintViewModel



<div>
    <h3>Create new sprint </h3>
    <hr/>
    <p>Create a new sprint for a project. Sprints can be then assigned to a specific ticket.</p>
    <form method="post">
        <input asp-for="ProjectId" type="text" value="@Model.ProjectId" hidden="hidden"/>
        <div class="mt-3">
            <label asp-for="@Model.Name">Sprint name</label>
            <input asp-for="Name" type="text" class="form-control" placeholder="Sprint name..."/>
            <span asp-validation-for="Name" class="text-danger"></span>

        </div>

        <div class="mt-3">
            <label asp-for="@Model.Description">Sprint description</label>
            <input asp-for="Description" class="form-control" placeholder="Sprint description..."/>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>

        <button class="btn btn-primary mt-3">Add new sprint</button>


    </form>
</div>